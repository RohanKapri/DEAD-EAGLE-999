!yamlscript/v0

defn is-divisible(dividend, divisor):
  zero?(rem(dividend divisor))

dict =:: { 3: Pling, 5: Plang, 7: Plong }

defn convert(number):
  words =:
    reduce _ [] [3 5 7]:
      fn(acc num):
        concat acc:
          when is-divisible(number num): -[dict.$num]
  
  if words.?: words.str(*) str(number)